generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum DayOfWeek {
  Mon
  Tue
  Wed
  Thu
  Fri
  Sat
  Sun
}

model User {
  id                String         @id @default(cuid())
  phone             String         @unique
  passwordHash      String
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  dailyCalorieLimit Int?
  resetDay          DayOfWeek?
  desiredWeight     Int?
  weights           WeightEntry[]
  foodEntries       FoodEntry[]
  favoriteFoods     FavoriteFood[]
}

model WeightEntry {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  measuredAt DateTime @default(now()) //когда взвешивался (серверное время)
  weight     Float //значение веса кг

  @@index([userId, measuredAt])
}

model FoodEntry {
  id       String   @id @default(cuid())
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  eatenAt  DateTime @default(now()) //когда добавлен прием пищи (серверное время)
  title    String
  calories Int

  @@index([userId, eatenAt])
}

model FavoriteFood {
  id       String @id @default(cuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  title    String
  calories Int

  @@index([userId])
}
